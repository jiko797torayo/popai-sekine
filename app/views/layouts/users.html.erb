<!doctype html>
<html>
  <head>

    <title>
      <%= full_title(yield(:title)) %>
    </title>

    <%= csrf_meta_tags %>
    <%# <%= favicon_link_tag %1> %>

    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no'>
    <meta name='format-detection' content='telephone=no' />


    <link href='https://use.fontawesome.com/releases/v5.6.1/css/all.css' rel='stylesheet'>

    <%= stylesheet_link_tag    'user', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body class='user-body'>
    <header>
      <div class='container mw-1024'>
        <div class='row'>
          <div class='col-12 mx-auto p-0 header text-center bg-whitegray'>
            <%= link_to root_path do %>
              <i class='fas fa-chevron-left'></i>
            <% end %>
            <%= yield(:title) %>
          </div>
        </div>
      </div>
    </header>
    <%= yield %>
    <footer class=''>
      <div class='container mw-1024'>
        <div class='row'>
          <div class='col-6 mx-auto p-0 footer bg-whitegray text-center'>
            <%= link_to records_path do %>
              <%# <div class='footer-icon w-100'> %>
              <div class='footer-icon'>
                <i class='far fa-list-alt'></i>
              </div>
              <%# <div class='footer-text w-100'> %>
              <div class='footer-text'>
                レコード
              </div>
            <% end %>
          </div>
          <div class='col-6 mx-auto p-0 footer bg-whitegray text-center'>
            <%= link_to '#' do %>
              <div class='footer-icon w-100'>
                <i class='fas fa-cog'></i>
              </div>
              <div class='footer-text w-100'>
                設定
              </div>
            <% end %>
          </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

